{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-md-12">

            <div class="panel panel-primary">

                <div class="panel-heading">
                    <h3 class="panel-title">Lista de Usuários</h3>
                </div>

                <div class="panel-body">


                    <div class="table-responsive">
                        <table class="table table-condensed table-striped table-hover table-bordered order=[] myTable">
                            <thead>
                            <tr>
                                <th>Actions</th>
                                <th>Ativo ?</th>
                                <th>Nome</th>
                                <th>Email</th>
                                <th>Login</th>
                                <th>Cliente(s)</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for usuario in usuarios %}
                                <tr>
                                    <td>
                                        <a href="{{ path('usuario_show', { 'id': usuario.id }) }}"
                                           class="btn btn-primary btn-xs">
                                            <span class="glyphicon glyphicon-search"></span>
                                        </a>
                                    </td>
                                    <td>{% if usuario.isativo %}SIM{% else %}NÃO{% endif %}</td>
                                    <td>{{ usuario.nome }}</td>
                                    <td>{{ usuario.email }}</td>
                                    <td>{{ usuario.login }}</td>
                                    <td>
                                        {{ render(controller('PortalBundle:Usuario:getAllClientsFromUsers',{ 'usuario': usuario.id })) }}
                                    </td>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <a href="{{ path('portal_homepage') }}" class="btn btn-primary">
                Principal
            </a>
        </div>

        <div class="col-md-3">
            <a href="{{ path('usuario_toinative_index') }}" class="btn btn-primary">
                Usuários para Inativar
            </a>
        </div>

    </div>

{% endblock %}
