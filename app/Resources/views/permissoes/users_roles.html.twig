{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">

            <div class="panel panel-primary">

                <div class="panel-heading">
                    <h3 class="panel-title">Todos Usuários com esta permissão</h3>
                </div>

                <div class="panel-body">


                    <div class="table-responsive">
                        <table class="table table-condensed table-striped table-hover table-bordered users_roles">
                            <thead>
                            <tr>
                                <th>Actions</th>
                                <th>Ativo ?</th>
                                <th>Nome</th>
                                <th>Email</th>
                                <th>Login</th>
                            </tr>
                            </thead>
                            <tbody>
                            {%  for usuario in listaUsuarios %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('usuario_show', { 'id': usuario.id }) }}"
                                               class="btn btn-primary btn-xs">
                                                <span class="glyphicon glyphicon-search"></span>
                                            </a>
                                        </td>
                                        <td>{% if usuario.isativo %}SIM{% else %}NÃO{% endif %}</td>
                                        <td>{{ usuario.nome }}</td>
                                        <td>{{ usuario.email }}</td>
                                        <td>{{ usuario.login }}</td>
                                    </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>

        </div>
    </div>

{% endblock %}

        {% block javascripts %}
            <script src="{{ asset('bundles/portal/js/jquery-3.2.1.min.js') }}"></script>
            <script src="{{ asset('bundles/portal/js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('bundles/portal/js/jquery.dataTables.min.js') }}"></script>

            <script>
                $('.users_roles').dataTable({
                    paginate: false
                });
            </script>
        {% endblock %}