{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">

            <div class="panel panel-primary">

                <div class="panel-heading">
                    <h3 class="panel-title">Grupo de Usuarios</h3>
                </div>

                <div class="panel-body">

                    <div class="table-responsive">
                        <table class="table table-condensed table-striped table-hover table-bordered myTable">
                            <thead>
                            <tr>
                                <th>Actions</th>
                                <th>Ativo ?</th>
                                <th>Nome</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for grupoUsuario in grupoUsuarios %}
                                <tr>
                                    <td>
                                        <a href="{{ path('grupousuarios_show', { 'id': grupoUsuario.id }) }}"
                                           class="btn btn-primary btn-sm">
                                            <span class="glyphicon glyphicon-search"></span>
                                        </a>
                                    </td>
                                    <td>{% if grupoUsuario.isativo %}Yes{% else %}No{% endif %}</td>
                                    <td>{{ grupoUsuario.nome }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <a href="{{ path('portal_homepage') }}" class="btn btn-primary">
                Principal
            </a>
        </div>
    </div>

{% endblock %}
