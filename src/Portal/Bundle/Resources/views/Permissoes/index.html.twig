{% extends'::base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-md-12">

            <div class="panel panel-primary">

                <div class="panel-heading">
                    <h3 class="panel-title">Lista de Permissões</h3>
                </div>

                <div class="panel-body">


                    <div class="table-responsive">
                        <table class="table table-condensed table-striped table-hover table-bordered order=[] myTable">
                            <thead>
                            <tr>
                                <th>Actions</th>
                                <th>Nome</th>
                                <th>Descrição</th>
                                <th>Ajuda</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for permissao in permissoes %}
                                <tr>
                                    <td>
                                        <a href="{{ path('permissoes_show', { 'id': permissao.id }) }}"
                                           class="btn btn-primary btn-xs">
                                            <span class="glyphicon glyphicon-search"></span>
                                        </a>
                                    </td>
                                    <td>{{ permissao.nome }}</td>
                                    <td>{{ permissao.descricao }}</td>
                                    <td>{{ permissao.ajuda }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <a href="{{ path('portal_homepage') }}" class="btn btn-primary">
                Principal
            </a>
        </div>
    </div>


{% endblock %}